name:           emuwork
version:        0.1
cabal-version:  >= 1.12
build-type:     Simple
author:         B. Scott Michel
synopsis:       A prototype processor emulation framework

description:    Yet another processor emulation framework for my
                favorite old processors.
license:        GPL-3

library
  default-language:   Haskell2010
  hs-source-dirs:     src
  build-depends:      
                      base >= 4,
                      filepath,
                      directory,
                      deepseq,
                      containers >= 0.4,
                      bytestring >= 0.9,
                      vector >= 0.10,
                      fclabels,
                      transformers
  ghc-options:        -Wall
  default-extensions: MultiParamTypeClasses, TypeSynonymInstances, GADTs, TemplateHaskell
  exposed-modules:   
                      Machine,
                      Reader,
                      Z80,
                      TIExplorer.Explorer

executable emuwork
  default-language:   Haskell2010
  hs-source-dirs:     src-main, src
  main-is:            Main.hs
  build-depends:      base >= 4,
                      directory,
                      filepath,
                      deepseq,
                      containers >= 0.4,
                      bytestring >= 0.9,
                      vector >= 0.10,
                      fclabels,
                      transformers
  ghc-options:        -Wall
  default-extensions: MultiParamTypeClasses, TypeSynonymInstances, GADTs
  other-modules:   
                      Machine,
                      Reader,
                      Z80,
                      TIExplorer.Explorer

executable trs80l2rom
  default-language:   Haskell2010
  hs-source-dirs:     src-trs80l2rom, src
  main-is:            RomDisassembly.hs
  build-depends:      base >= 4,
                      directory,
                      filepath,
                      deepseq,
                      containers >= 0.4,
                      bytestring >= 0.9,
                      vector >= 0.10,
                      fclabels,
                      transformers
  ghc-options:        -Wall
  default-extensions: MultiParamTypeClasses, TypeSynonymInstances, GADTs
  other-modules:   
                      Machine,
                      Reader,
                      Z80,
                      TIExplorer.Explorer